@import "variable.styl"

body, html
  line-height: 1
  font-family: 'PingFang SC', 'STHeitiSC-Light', 'Helvetica-Light', arial, sans-serif, 'Droid Sans Fallback'
  user-select: none
  -webkit-tap-highlight-color: transparent
  // background: $color-background
  color: $color-text
  input[type=text]:focus
    outline: none
    border: none
    caret-color $color-text-o
  input[type=tel]:focus
    outline: none
    border: none
    caret-color $color-text-o
  textarea:focus
    outline: none
    border: none
  @keyframes blings-1
    0%
      transform: scale(0)
      opacity: 0
    25%
      transform: scale(0)
      opacity: 1
    100%
      transform: scale(1)
      opacity: 0
  @keyframes blings-2
    0%
      transform: scale(0)
      opacity: 0
    25%
      transform: scale(0)
      opacity: 1
    100%
      transform: scale(1.2)
      opacity: 0
  @keyframes blings-3
    0%
      transform: scale(0)
      opacity: 0
    25%
      transform: scale(0)
      opacity: 1
    100%
      transform: scale(1.3)
      opacity: 0