// 一行显示多余部分省略号
no-warp()
  text-overflow ellipsis
  overflow hidden
  white-space nowrap

// 扩展点击区域
extend-click()
  position: relative
  &:before
    content: ''
    position: absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px

// bottom-line
bt-line()
  &::after
    position absolute
    bottom 0
    left 10px
    right 10px
    content: ''
    height 1px
    background #F7F7F7